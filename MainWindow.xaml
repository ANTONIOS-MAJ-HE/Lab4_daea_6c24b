<Window x:Class="Lab4_daea_6c24b.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4_daea_6c24b"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- DataGrid para Listado de Productos -->
        <DataGrid x:Name="ProductosGrid" Grid.Column="0" AutoGenerateColumns="True"/>

        <!-- DataGrid para Listado de Categorías -->
        <DataGrid x:Name="CategoriasGrid" Grid.Column="1" AutoGenerateColumns="True"/>
    </Grid>
</Window>
